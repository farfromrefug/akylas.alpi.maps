<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme.ActionBarStyle.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    </style>

    <style name="BaseTheme.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/BaseTheme.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="BaseTheme.AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#097591</item>
    </style>

    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light">
         <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="actionBarStyle">@style/BaseTheme.ActionBarStyle</item>
        <item name="alertDialogTheme">@style/BaseTheme.AlertDialogStyle</item>       
        
        <item name="colorPrimary">#0CA3CA</item>
        
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#097591</item>
        
        <!-- colorAccent is used as the default value for colorControlActivated
        which is used to tint widgets -->
        <item name="colorAccent">#0CA3CA</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#0CA3CA</item>
        <item name="colorControlHighlight">#0CA3CA</item>
    </style>
    
</resources> 